{
  "name": "gamitopia",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "watch": "vue-cli-service build --watch --mode development",
    "lint": "vue-cli-service lint",
    "heroku-postbuild": "npm run build && npm install --prefix ./gamitopia-backend"
  },
  "dependencies": {
    "@types/fastclick": "^1.0.28",
    "@types/highlight.js": "^9.12.3",
    "@types/vue2-hammer": "^2.1.0",
    "axios": "^0.19.2",
    "fastclick": "^1.0.6",
    "highlight.js": "^9.18.1",
    "v-tooltip": "^2.0.3",
    "vue": "^2.6.10",
    "vue-analytics": "^5.20.2",
    "vue-router": "^3.0.3",
    "vue-unity-webgl": "^1.2.0",
    "vue2-hammer": "^2.1.2",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-eslint": "^3.11.0",
    "@vue/cli-plugin-typescript": "^3.11.0",
    "@vue/cli-service": "^3.11.0",
    "@vue/eslint-config-prettier": "^5.0.0",
    "@vue/eslint-config-typescript": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-vue": "^5.0.0",
    "node-sass": "^4.9.0",
    "prettier": "^1.18.2",
    "sass-loader": "^7.1.0",
    "typescript": "^3.8.2",
    "vue-template-compiler": "^2.6.10"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier",
      "@vue/typescript"
    ],
    "rules": {
      "no-console": "off",
      "prettier/prettier": [
        "warn",
        {
          "singleQuote": true
        }
      ]
    },
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}

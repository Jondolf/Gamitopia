{
  "name": "gamitopia-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "postinstall": "npm run build",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js --config ./orm.env --",
    "typeorm:generate": "ts-node ./node_modules/typeorm/cli.js --config ./orm.env migration:generate -n",
    "typeorm:create": "ts-node ./node_modules/typeorm/cli.js --config ./orm.env entity:create -n",
    "typeorm:migrate": "ts-node ./node_modules/typeorm/cli.js --config ./orm.env migration:run",
    "migration:run:prod": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.11.11",
    "@nestjs/config": "^0.2.4",
    "@nestjs/core": "^6.11.11",
    "@nestjs/jwt": "^6.1.2",
    "@nestjs/passport": "^6.2.0",
    "@nestjs/platform-express": "^6.11.11",
    "@nestjs/serve-static": "^1.0.2",
    "@nestjs/typeorm": "^6.3.4",
    "@types/sanitize-html": "^1.27.1",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "express-sslify": "^1.2.0",
    "helmet": "^3.23.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.18.2",
    "pg-connection-string": "^2.4.0",
    "postgres": "^1.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.6.6",
    "sanitize-html": "^2.3.2",
    "typeorm": "^0.2.31"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.13.2",
    "@nestjs/schematics": "^6.9.4",
    "@nestjs/testing": "^6.11.11",
    "@types/express": "^4.17.11",
    "@types/jest": "^24.0.25",
    "@types/node": "^12.20.4",
    "@types/passport-jwt": "^3.0.5",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.9"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
